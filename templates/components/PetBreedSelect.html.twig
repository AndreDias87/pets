<div class="mb-4">
    <label class="block font-semibold mb-1">What breed are they?</label>

    <select data-model="breed" class="w-full border rounded px-3 py-2">
        <option value="">Choose a breed</option>
        {% for breed_option in breeds %}
            <option value="{{ breed_option.id }}" {% if breed is same as(breed_option) %}selected{% endif %}>
                {{ breed_option.name }}
            </option>
        {% endfor %}
        <option value="unknown">Canâ€™t find it?</option>
    </select>

    {% if showCustomInput %}
        <div class="mt-2">
            <label class="block mb-1">Custom breed name:</label>
            <input type="text" data-model="customBreedName" class="w-full border rounded px-3 py-2" />
        </div>
    {% endif %}
</div>
