<fieldset>
    {% if label is defined %}
        <legend class="mb-2 font-semibold text-gray-700">{{ label }}</legend>
    {% endif %}
    <div class="flex flex-row">
        <div role="radiogroup" class="flex border border-blue-800 rounded-sm overflow-hidden divide-x divide-blue-800 h-10">
            {% for option in options %}

                {# Make a unique id for accessibility #}
                {% set id = name ~ '-' ~ option.value|lower %}

                <div class="flex-1">
                    <input
                        type="radio"
                        id="{{ id }}"
                        name="{{ name }}"
                        value="{{ option.value }}"
                        class="peer sr-only"
                        data-model="pet.type"
                    />
                    <label
                        for="{{ id }}"
                        class="flex h-10 w-full items-center justify-center cursor-pointer px-4
                       transition-colors duration-200
                       text-blue-800
                       hover:bg-blue-800 hover:text-white
                       peer-checked:bg-blue-800 peer-checked:text-white
                       peer-focus-visible:ring-2 peer-focus-visible:ring-blue-800"
                    >
                        {{ option.label }}
                    </label>
                </div>
            {% endfor %}
    </div>
</fieldset>
