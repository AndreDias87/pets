{% extends 'base.html.twig' %}

{% block title %}Pet{% endblock %}

{% block body %}
    <h1>Pet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pet.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ pet.birthdate ? pet.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ pet.sex }}</td>
            </tr>
            <tr>
                <th>BirthdayIsKnown</th>
                <td>{{ pet.birthdayIsKnown ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CustomBreedName</th>
                <td>{{ pet.customBreedName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pet_index') }}">back to list</a>

    <a href="{{ path('app_pet_edit', {'id': pet.id}) }}">edit</a>

    {{ include('pet/_delete_form.html.twig') }}
{% endblock %}
